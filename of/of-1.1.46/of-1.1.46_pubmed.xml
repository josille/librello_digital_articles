         <article-title>Crop Protection in Medieval Agriculture. Studies in Pre-Modern Organic Agriculture</article-title>
         <person-group person-group-type="author">
            <name>
               <surname>Zadoks</surname>
               <given-names>JC</given-names>
            </name>
         </person-group>
         <publisher-name>Sidestone Press</publisher-name>
